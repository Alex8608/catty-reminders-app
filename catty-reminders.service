[Unit]
Description=Catty Reminders Application
After=network.target

[Service]
Type=simple
User=alex
WorkingDirectory=/home/alex/catty-reminders-app
ExecStart=/home/alex/catty-reminders-app/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8181
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
